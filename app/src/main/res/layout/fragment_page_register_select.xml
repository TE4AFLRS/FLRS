<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/light_orchid_pink"
    tools:context=".ui.page_register_select.PageRegisterSelectFragment">

    <TextView
        android:id="@+id/text_PageRegisterSelect"
        android:layout_width="344dp"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="追加方法を選択してください"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/button_manal_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.757"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746" />

    <Button
        android:id="@+id/button_manal_register"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/light_orchid_pink"
        android:drawableTop="@drawable/ic_edit"
        android:text="入力して追加"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_camera_register"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_camera_register"
        android:layout_width="140dp"
        android:layout_height="180dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/isle_tone_blue"
        android:drawableTop="@drawable/ic_camera"
        android:text="カメラで追加"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>